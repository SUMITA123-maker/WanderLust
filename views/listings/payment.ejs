<% layout("/layouts/boilerplate.ejs") %>

<div class="container my-5 d-flex justify-content-center">
  <div class="payment-card">
    <h3>Confirm Your Payment</h3>

    <!-- Booking Details -->
    <p><strong>Check-in:</strong> <%= checkin %></p>
    <p><strong>Checkout:</strong> <%= checkout %></p>
    <p><strong>Guests:</strong> <%= guests %></p>
    <hr>
    <h4>Total Amount: â‚¹<%= finalTotal %></h4>

    <!-- Fake Card Payment -->
    <form action="/listings/<%= listing._id %>/confirmation" method="POST" class="needs-validation" novalidate>
      <input type="hidden" name="checkin" value="<%= checkin %>">
      <input type="hidden" name="checkout" value="<%= checkout %>">
      <input type="hidden" name="guests" value="<%= guests %>">
      <input type="hidden" name="total" value="<%= finalTotal %>">


      <div class="mb-3">
        <label for="cardNumber" class="form-label">Card Number</label>
        <input 
          type="text" 
          id="cardNumber" 
          class="form-control" 
          placeholder="1234 5678 9012 3456" 
          required>
          <div class="invalid-feedback">Please give your card number</div>
      </div>
      

      <div class="row mb-3">
        <div class="col">
          <label for="expiry" class="form-label">Expiry</label>
          <input 
            type="text" 
            id="expiry" 
            class="form-control" 
            placeholder="MM/YY" 
            required>
            <div class="invalid-feedback">Please enter your expiry date</div>
        </div>
        <div class="col">
          <label for="cvv" class="form-label">CVV</label>
          <input 
            type="password" 
            id="cvv" 
            class="form-control" 
            placeholder="123" 
            required>
            <div class="invalid-feedback">Please enter your CVV</div>
        </div>
      </div>

      <button type="submit" class="btn btn-success w-100">
        Confirm Your Trip
      </button>
    </form>
  </div>
</div>




